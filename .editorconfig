# Editor configuration, see
# https://editorconfig-specification.readthedocs.io/en/latest/#supported-pairs

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{*.md,**/docs/**/*.html}]
trim_trailing_whitespace = unset
